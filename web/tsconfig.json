{
  "extends": "../tsconfig.json",
  "include": ["src/**/*"],
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": true,
    "jsx": "preserve",
    "paths": {
      "api/*": ["src/api/*"],
      "components/*": ["src/components/*"],
      "containers/*": ["src/containers/*"],
      "gatsby/*": ["src/gatsby/*"],
      "generated/*": ["__generated__"],
      "hooks/*": ["src/hooks/*"],
      "layouts/*": ["src/layouts/*"],
      "lib/*": ["src/lib/*"],
      "pages/*": ["src/pages/*"],
      "styles/*": ["src/styles/*"],
      "templates/*": ["src/templates/*"],
      "types/*": ["src/@types/*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
