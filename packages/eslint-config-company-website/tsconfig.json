{
  "declaration": true,
  "extends": "../../tsconfig.json",
  "module": "commonjs",
  "target": "es2015",
  "compilerOptions": {
    "outDir": "dist/",
    "rootDir": "src",
    "tsBuildInfoFile": "./.cache/tsconfig.tsbuildinfo"
